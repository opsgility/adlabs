{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmstorageType": {
      "type": "string",
      "defaultValue": "Premium_LRS",
      "allowedValues": [
        "Premium_LRS"
      ]
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "demouser",
      "metadata": {
        "description": "The name of the administrator account of the new VM and domain"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "demo@pass123",
      "metadata": {
        "description": "The password for the administrator account of the new VM and domain"
      }
    },
    "domainName": {
      "type": "string",
      "defaultValue": "opsdemo.local",
      "metadata": {
        "description": "The FQDN of the Active Directory Domain to be created"
      }
    },
    "DomainJoinscriptUrl": {
      "type": "string",
      "metadata": {
        "description": "script to execute"
      }
    },
    "DomainJoinedVMName": {
      "type": "string",
      "defaultValue": "AFDFSVM",
      "minLength": 1
    },
    "DomainJoinedVMWindowsOSVersion": {
      "type": "string",
      "defaultValue": "2016-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "2016-Datacenter"
      ]
    }
  },
  "variables": {
    "VNETNAME": "OPSTrainingVNET",
    "DNSIP": "10.0.1.4",
    "OPSTrainingVNETPrefix": "10.0.0.0/16",
    "OPSTrainingVNETSubnet1Name": "Apps",
    "OPSTrainingVNETSubnet1Prefix": "10.0.0.0/24",
    "OPSTrainingVNETSubnet2Name": "Identity",
    "OPSTrainingVNETSubnet2Prefix": "10.0.1.0/24",
    "vmstorageName": "[concat('msstorage', uniqueString(resourceGroup().id))]",
    "scriptFolder": ".",
    "DomainJoinscriptFileName": "domain-join.ps1",
    "DomainJoinscriptParameters": "[concat(' -domain ', parameters('domainName'), ' -user ', parameters('adminUsername'), ' -password ', parameters('adminPassword'))]",
    "SUBCAVMImagePublisher": "MicrosoftWindowsServer",
    "SUBCAVMImageOffer": "WindowsServer",
    "SUBCAVMOSDiskName": "SUBCAVMOSDisk",
    "SUBCAVMVmSize": "Standard_DS2_v2",
    "SUBCAVMVnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'OPSTrainingVNET')]",
    "SUBCAVMSubnetRef": "[concat(variables('SUBCAVMVnetID'), '/subnets/', variables('OPSTrainingVNETSubnet1Name'))]",
    "SUBCAVMStorageAccountContainerName": "vhds",
    "SUBCAVMNicName": "[concat(parameters('DomainJoinedVMName'), 'NetworkInterface')]",
    "SUBCAVMDISK1": "[concat('http://',variables('vmstorageName'),'.blob.core.windows.net/','vhds','/','SUBCAVMdataDisk1.vhd')]",
    "SUBCAVM-IPName": "SUBCAVM-IP"
  },
  "resources": [
    {
      "name": "[variables('vmstorageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('vmstorageType')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "vmstorage"
      },
      "kind": "Storage"
    },
    {
      "name": "[variables('SUBCAVMNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('SUBCAVM-IPName'))]"
      ],
      "tags": {
        "displayName": "SUBCAVMNic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('SUBCAVMSubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('SUBCAVM-IPName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('DomainJoinedVMName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('vmstorageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('SUBCAVMNicName'))]"
      ],
      "tags": {
        "displayName": "SUBCAVM"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('SUBCAVMVmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('DomainJoinedVMName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('SUBCAVMImagePublisher')]",
            "offer": "[variables('SUBCAVMImageOffer')]",
            "sku": "[parameters('DomainJoinedVMWindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "SUBCAVMOSDisk",
            "vhd": {
              "uri": "[concat(reference(resourceId('Microsoft.Storage/storageAccounts', variables('vmstorageName')), '2016-01-01').primaryEndpoints.blob, variables('SUBCAVMStorageAccountContainerName'), '/', variables('SUBCAVMOSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "name": "SUBCAVMdataDisk1",
              "diskSizeGB": "1023",
              "lun": 0,
              "vhd": { "uri": "[variables('SUBCAVMDISK1')]" },
              "createOption": "Empty"
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('SUBCAVMNicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "DomainJoin",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2016-03-30",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', parameters('DomainJoinedVMName'))]"
          ],
          "tags": {
            "displayName": "DomainJoin"
          },
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "CustomScriptExtension",
            "typeHandlerVersion": "1.4",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "fileUris": [
                "[concat(parameters('DomainJoinscriptUrl'))]"
              ],
              "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ', variables('scriptFolder'), '/', variables('DomainJoinscriptFileName'), ' ', variables('DomainJoinscriptParameters'))]"
            }
          }
        }
      ]
    },
    {
      "name": "[variables('SUBCAVM-IPName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [],
      "tags": {
        "displayName": "SUBCAVM-IP"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    }
  ],
  "outputs": {}
}
